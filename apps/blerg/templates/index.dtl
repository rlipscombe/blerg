{% extends "_master.dtl" %}

{% block content %}
      {% for p in posts %}
      <article>
      <h1><a href="/post/{{ p.id }}">{{ p.title }}</a></h1>
      <div class="details">
          <span class="created_at" title="{{ p.created_at_iso }}">{{ p.created_at_ago }}</span>
      </div>
      <p>{{ p.teaser }}</p>
      {% if p.read_more %}
      <a href="/post/{{ p.id }}">&raquo; read more</a>
      {% endif %}
      </article>
      {% endfor %}
{% endblock %}

