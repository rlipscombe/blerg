{lib_dirs, [".."]}.

{deps, [
        %% Logging
        {lager, ".*",
         {git, "git://github.com/basho/lager.git", {tag, "2.0.0"}}},

        %% Cowboy
        {cowboy, ".*",
         {git, "git://github.com/extend/cowboy.git", {tag, "0.9.0"}}},

        %% Django templates
        {erlydtl, ".*",
         {git, "git://github.com/evanmiller/erlydtl.git", {tag, "0.7.0"}}},

        %% Poolboy
        {poolboy, ".*",
         {git, "git://github.com/devinus/poolboy.git", {tag, "1.0.1"}}},

        %% epgsql
        {epgsql, ".*",
         {git, "git://github.com/wg/epgsql.git", {tag, "1.4"}}}
        ]}.

{erl_opts, [
        % lager parse transform -- enables lager:debug, etc.
        {parse_transform, lager_transform}
        ]}.

